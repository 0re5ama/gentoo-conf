Config { font = "xft:Terminus-10,DejaVu Sans Mono:pixelsize=16,Kochi Gothic:pixelsize=16"
       , bgColor = "black"
       , fgColor = "grey"
       , position = Static { xpos = 0, ypos = 0, width = 4096, height = 32 }
       , commands = [ Run Cpu ["-L","5","-H","50","--normal","#85c600","--high","#E03C52"] 10
                    , Run Memory ["-t","Mem: <usedratio>%"] 10
                    , Run Date "%Y %b %d (%a) %H:%M %Z" "date" 10
                    , Run Network "eth0" ["-t", "Down: <fc=#7FC5C6><rx></fc> kb/s | Up: <fc=#ffa600><tx></fc> kb/s"] 10
                    , Run MPD ["-t", "<state>: <artist> - <title> (<album>)"] 10
                    , Run StdinReader
                    ]
       , template = "%StdinReader% }{ <fc=#85c600>%mpd%</fc> | %eth0% | %cpu% | <fc=#85919b>%memory%</fc>   <fc=#DACCBB>%date%</fc>"
       }
